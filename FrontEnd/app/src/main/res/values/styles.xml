<resources>

    <!-- Themes -->

    <!-- Light theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarColor">@color/White</item>
        <item name="backgroundColor">@color/backgroundLight</item>
        <item name="cardBackgroundColor">@color/cardBackgroundLight</item>
        <item name="textColor">@color/textColorLight</item>
        <item name="textColorStrong">@color/Black</item>
        <item name="tintColor">@color/tintColorLight</item>
        <item name="buttonColor">@color/buttonColorLight</item>
        <item name="buttonTextColor">@color/White</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:statusBarColor">@color/White</item>

        <!-- Transitions -->
        <item name="android:windowActivityTransitions">true</item>



    </style>

    <!-- Night theme. -->
    <style name="NightTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarColor">@color/colorPrimaryDarkNight</item>
        <item name="backgroundColor">@color/backgroundNight</item>
        <item name="cardBackgroundColor">@color/cardBackgroundNight</item>
        <item name="textColor">@color/textColorNight</item>
        <item name="textColorStrong">@color/textColorNight</item>
        <item name="tintColor">@color/tintColorNight</item>
        <item name="buttonColor">@color/buttonColorNight</item>
        <item name="buttonTextColor">@color/White</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDarkNight</item>

        <!-- Transitions -->
        <item name="android:windowActivityTransitions">true</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
